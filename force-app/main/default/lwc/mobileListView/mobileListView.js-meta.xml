<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>mobile List View</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage">
            <property name="objectApiName" type="String" label="Object API Name" required="true" />
            <property name="listViewApiName" type="String" label="List View API Name" required="true" />
            <property name="sectionName" type="String" label="Accordion Section Name" required="false" />
        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property name="objectApiName" type="String" label="Object API Name" required="true" />
            <property name="listViewApiName" type="String" label="List View API Name" required="true" />
            <property name="sectionName" type="String" label="Accordion Section Name" required="false" />
            <property name="flowUrl" type="String" label="Flow URL" description="URL of the flow to redirect to on click (e.g., /flow/My_Flow). If set, clicking a record redirects here with ?recordId={id}." required="false" />
            <property name="techMode" type="Boolean" label="Tech Mode" description="If checked, adds &amp;TechMode=true to the URL." required="false" />
            <property name="selectedRecordId" type="String" label="Selected Record ID" description="Output: The ID of the record clicked by the user" role="outputOnly" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
